<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <Button
            android:text="Start Timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/starttime" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.216"/>
    <TextView
            android:text="Set Time:"
            android:textSize="30sp"
            android:layout_width="145dp"
            android:layout_height="58dp"
            android:id="@+id/settime" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.085"
            app:layout_constraintVertical_bias="0.052"/>
    <EditText
            android:layout_width="138dp"
            android:layout_height="47dp"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/entertime" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.688"
            app:layout_constraintVertical_bias="0.068"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="263dp"
            android:layout_height="326dp"
            android:id="@+id/progress"
            android:progress="0"
            android:progressDrawable="@drawable/circle"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.443"
            app:layout_constraintVertical_bias="0.535"/>
    <EditText
            android:layout_width="97dp"
            android:layout_height="98dp"
            android:inputType="time"
            android:ems="10"
            android:textStyle="bold"
            android:textSize="30sp"
            android:id="@+id/changetime"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.536"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
    <Button
            android:text="Reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/resest" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintVertical_bias="0.055" app:layout_constraintStart_toEndOf="@+id/entertime"
            android:layout_marginStart="8dp" android:layout_marginLeft="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>